<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Hobbies"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_cricket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket" />

        <CheckBox
            android:id="@+id/check_football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football" />

        <CheckBox
            android:id="@+id/check_hockey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hockey" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Select CIty"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_group_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_button_delhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi" />

            <RadioButton
                android:id="@+id/radio_button_mumbai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai" />

            <RadioButton
                android:id="@+id/radio_button_punjab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panjab" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>